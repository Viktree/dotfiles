# This is Git's per-user configuration file.

[user]
	name = Vikram Venkatarmanan
	email = vikram.venkataramanan@mail.utoronto.ca

[core]
	editor = nvim

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	changed = yellow
	added = green
	untracked = red

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[help]
	autocorrect = 1

[alias]
  fix = commit -a --amend --no-edit
  ls = reflog --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  undo = reset HEAD --hard

  # branch stuff
	delete-branch = branch -D
  rename-branch = branch -m
  new-branch = checkout -b
  switch-branch = checkout
  branch-name = "!git rev-parse --abbrev-ref HEAD"
  publish = "!git push -u origin $(git branch-name)"
	publish-fix = "!git push -f -u origin $(git branch-name)"
  unpublish = "!git push origin :$(git branch-name)"
	delete-merged-branches = "!git checkout master && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

[commit]
	template = ~/.gitmessage

[credential]
	helper = osxkeychain
